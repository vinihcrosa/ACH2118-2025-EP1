{
  "_comment": "Este é um exemplo de arquivo de configuração customizado",
  "datasets": {
    "arcaico_moderno": "train_arcaico_moderno.csv",
    "complexo_simples": "train_complexo_simples.csv",
    "literal_dinamico": "train_literal_dinamico.csv"
  },
  "cv_config": {
    "n_folds": 10,
    "random_state": 42
  },
  "models": {
    "tfidf_lr_simple": {
      "type": "sklearn_pipeline",
      "steps": [
        {
          "name": "tfidf",
          "class": "sklearn.feature_extraction.text.TfidfVectorizer",
          "params": {
            "max_features": 5000,
            "ngram_range": [
              1,
              3
            ]
          }
        },
        {
          "name": "clf",
          "class": "sklearn.linear_model.LogisticRegression",
          "params": {
            "max_iter": 2000,
            "n_jobs": 1
          }
        }
      ]
    },
    "count_rf": {
      "type": "sklearn_pipeline",
      "steps": [
        {
          "name": "vectorizer",
          "class": "sklearn.feature_extraction.text.CountVectorizer",
          "params": {
            "max_features": 5000,
            "ngram_range": [
              1,
              2
            ]
          }
        },
        {
          "name": "clf",
          "class": "sklearn.ensemble.RandomForestClassifier",
          "params": {
            "n_estimators": 100,
            "random_state": 42,
            "n_jobs": -1
          }
        }
      ]
    }
  },
  "experiments": [
    {
      "model": "tfidf_lr_simple",
      "param_grid": {
        "tfidf__max_features": [
          3000,
          5000,
          10000
        ],
        "tfidf__ngram_range": [
          [
            1,
            1
          ],
          [
            1,
            2
          ],
          [
            1,
            3
          ]
        ]
      }
    },
    {
      "model": "count_rf",
      "param_grid": {
        "clf__n_estimators": [
          50,
          100,
          200
        ],
        "vectorizer__max_features": [
          3000,
          5000
        ]
      }
    }
  ]
}